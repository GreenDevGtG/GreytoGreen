{% extends '@Article/Default/index.html.twig' %}

{% block titre %} Ev√®nements
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <a href="{{ path('evenement_add') }}" class="link ajout"><i class="fas fa-plus"></i></a>
    {% endif %}

{% endblock %}

{% block content %}

    {% for key,evenement in articles %}
        <div class="article">
            <a class="button-upDown" data-toggle="collapse" href="#collapse{{ key }}" role="button" aria-expanded="false" aria-controls="collapse{{ key }}">
            <header class="row article-entete">
                <div class="col-1">
                        <i class="fa fa-sort-down header"></i> 
                </div>
                <h5 class="article-titre col-8">{{ evenement.nom }}</h5>
                <div class="col-3">
                    {% for key,cat in evenement.categories if cat.id != 15 %}
                        <span class="article-categorie badge badge-light float-right">
                            {{ cat.nom }}
                        </span>
                    {% endfor %}
                </div>
                
            </header>
            </a>
            <div class="collapse" id="collapse{{ key }}">
            <div class="text-center">
                <img class="article-image img-responsive " src="{{ evenement.urlImage }}" alt="">
            </div>    
            <div>
                <div class="article-contenu">
                    <p>{{ evenement.miseEnFormeContenu }}</p> 
                </div>
                <a class="article-source" href="{{ evenement.urlSource }}">Source</a>
                <a href="{{ path('evenement_update', {id: evenement.id}) }}"><i class="fa fa-pen"></i></a>
            </div> 
            </div>
        </div>
    {% endfor %}

{% endblock %}